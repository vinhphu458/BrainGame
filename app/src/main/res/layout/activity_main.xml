<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    tools:context=".MainActivity">



    <vlth.myproject.Library.NumberProgressBar
        android:id="@+id/proTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        custom:progress_unreached_color="#CCCCCC"
        custom:progress_reached_color="#3498DB"

        custom:progress_unreached_bar_height="3.75dp"
        custom:progress_reached_bar_height="10.5dp"

        custom:progress_text_size="20sp"
        custom:progress_text_color="#3498DB"
        custom:progress_text_offset="1dp"
        custom:progress_text_visibility="visible"

        />
    <TextView
        android:id="@+id/point"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Your score: 0"
        android:textSize="32sp" />
    <TextView
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="1"
        android:textSize="50sp" />

    <Button
        android:soundEffectsEnabled="false"
        android:id="@+id/btHigher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="choose"
        android:text="Higher" />

    <Button
        android:soundEffectsEnabled="false"
        android:id="@+id/btLower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="choose"
        android:text="Lower" />

    <TextView
        android:id="@+id/count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
